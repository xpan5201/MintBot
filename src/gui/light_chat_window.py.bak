    def _start_tts_manager_and_check(self):
        """å¯åŠ¨TTSç®¡ç†å™¨å¹¶æ£€æŸ¥æœåŠ¡è¿æ¥ (v2.46.5: ä½¿ç”¨æŒä¹…event loop)"""
        from PyQt6.QtCore import QThread, pyqtSignal
        import asyncio

        class TTSEventLoopThread(QThread):
            """TTSäº‹ä»¶å¾ªç¯çº¿ç¨‹ - æŒä¹…è¿è¡Œevent loop (v2.46.5)"""
            status_ready = pyqtSignal(str, bool)  # (message, is_success)
            started = pyqtSignal()

            def __init__(self, tts_manager, tts_config):
                super().__init__()
                self.tts_manager = tts_manager
                self.tts_config = tts_config
                self.loop = None
                self._is_running = True

            def run(self):
                """åœ¨ç‹¬ç«‹çº¿ç¨‹ä¸­è¿è¡ŒæŒä¹…event loop"""
                try:
                    # åˆ›å»ºæ–°çš„event loop
                    self.loop = asyncio.new_event_loop()
                    asyncio.set_event_loop(self.loop)

                    # å¯åŠ¨TTSç®¡ç†å™¨
                    logger.info("æ­£åœ¨å¯åŠ¨TTSç®¡ç†å™¨...")
                    self.loop.run_until_complete(self.tts_manager.start())
                    logger.info("âœ… TTSç®¡ç†å™¨å·²å¯åŠ¨")

                    # æ£€æŸ¥æœåŠ¡å¥åº·çŠ¶æ€
                    logger.info("æ­£åœ¨æ£€æŸ¥TTSæœåŠ¡è¿æ¥...")
                    is_healthy = self.loop.run_until_complete(self.tts_manager.check_health())

                    if is_healthy:
                        logger.info("âœ… TTSæœåŠ¡è¿æ¥æˆåŠŸ")
                        self.status_ready.emit("TTSæœåŠ¡å·²è¿æ¥", True)
                    else:
                        logger.warning("âš ï¸ TTSæœåŠ¡è¿æ¥å¤±è´¥")
                        self.status_ready.emit(
                            f"TTSæœåŠ¡æœªå“åº”\nè¯·ç¡®ä¿GPT-SoVITSæœåŠ¡æ­£åœ¨è¿è¡Œ\nAPIåœ°å€: {self.tts_config.api_url}",
                            False
                        )

                    # å‘é€å¯åŠ¨å®Œæˆä¿¡å·
                    self.started.emit()

                    # v2.46.5: ä¿æŒevent loopè¿è¡Œï¼Œå¤„ç†TTSç®¡ç†å™¨çš„å¼‚æ­¥ä»»åŠ¡
                    logger.info("TTSäº‹ä»¶å¾ªç¯çº¿ç¨‹å¼€å§‹è¿è¡Œ...")
                    while self._is_running:
                        # è¿è¡Œä¸€æ¬¡äº‹ä»¶å¾ªç¯è¿­ä»£
                        self.loop.run_until_complete(asyncio.sleep(0.1))

                except Exception as e:
                    logger.error(f"TTSäº‹ä»¶å¾ªç¯å¼‚å¸¸: {e}")
                    self.status_ready.emit(
                        f"TTSå¯åŠ¨å¤±è´¥: {e}\nè¯·æ£€æŸ¥GPT-SoVITSæœåŠ¡æ˜¯å¦å¯åŠ¨",
                        False
                    )
                finally:
                    # æ¸…ç†
                    if self.loop and not self.loop.is_closed():
                        # åœæ­¢TTSç®¡ç†å™¨
                        try:
                            self.loop.run_until_complete(self.tts_manager.stop())
                        except Exception as e:
                            logger.error(f"åœæ­¢TTSç®¡ç†å™¨å¤±è´¥: {e}")

                        # å…³é—­loop
                        try:
                            pending = asyncio.all_tasks(self.loop)
                            for task in pending:
                                task.cancel()
                            if pending:
                                self.loop.run_until_complete(asyncio.gather(*pending, return_exceptions=True))
                            self.loop.close()
                        except Exception as e:
                            logger.error(f"å…³é—­event loopå¤±è´¥: {e}")

                    logger.info("TTSäº‹ä»¶å¾ªç¯çº¿ç¨‹å·²åœæ­¢")

            def stop(self):
                """åœæ­¢äº‹ä»¶å¾ªç¯çº¿ç¨‹"""
                self._is_running = False

        # åˆ›å»ºå¹¶å¯åŠ¨event loopçº¿ç¨‹
        self._tts_event_loop_thread = TTSEventLoopThread(self.tts_manager, self.tts_config)
        self._tts_event_loop_thread.status_ready.connect(self._show_tts_status)
        self._tts_event_loop_thread.start()

