    def _synthesize_tts_async(self, text: str):
        """å¼‚æ­¥åˆæˆTTSéŸ³é¢‘ (v2.34.0)"""
        if not self.tts_enabled or not self.tts_manager or not self.audio_player:
            return

        if not text or not text.strip():
            return

        try:
            # ä½¿ç”¨QThreadåœ¨åå°æ‰§è¡ŒTTSåˆæˆ
            from PyQt6.QtCore import QThread, pyqtSignal

            class TTSWorker(QThread):
                """TTSåˆæˆå·¥ä½œçº¿ç¨‹ (v2.46.5: ä½¿ç”¨TTSç®¡ç†å™¨çš„event loop)"""
                audio_ready = pyqtSignal(bytes)
                error_occurred = pyqtSignal(str)

                def __init__(self, tts_manager, text, event_loop_thread):
                    super().__init__()
                    self.tts_manager = tts_manager
                    self.text = text
                    self.event_loop_thread = event_loop_thread
                    self._is_running = True

                def run(self):
                    """v2.46.5: ä½¿ç”¨TTSç®¡ç†å™¨çš„æŒä¹…event loop"""
                    try:
                        # æ£€æŸ¥event loopçº¿ç¨‹æ˜¯å¦æ­£åœ¨è¿è¡Œ
                        if not self.event_loop_thread or not self.event_loop_thread.isRunning():
                            raise Exception("TTSäº‹ä»¶å¾ªç¯æœªè¿è¡Œ")

                        loop = self.event_loop_thread.loop
                        if not loop or loop.is_closed():
                            raise Exception("TTSäº‹ä»¶å¾ªç¯å·²å…³é—­")

                        audio_data = []

                        async def on_audio_ready(data: bytes):
                            if self._is_running:
                                audio_data.append(data)

                        # åœ¨TTSç®¡ç†å™¨çš„event loopä¸­æ‰§è¡Œåˆæˆä»»åŠ¡
                        future = asyncio.run_coroutine_threadsafe(
                            self.tts_manager.synthesize_text(self.text, callback=on_audio_ready),
                            loop
                        )

                        # ç­‰å¾…ä»»åŠ¡å®Œæˆï¼ˆæœ€å¤š30ç§’ï¼‰
                        future.result(timeout=30)

                        # å‘é€éŸ³é¢‘æ•°æ®
                        if audio_data and self._is_running:
                            self.audio_ready.emit(audio_data[0])

                    except Exception as e:
                        if self._is_running:
                            error_msg = f"TTSåˆæˆå¤±è´¥: {e}"
                            logger.error(error_msg)
                            self.error_occurred.emit(error_msg)

                def stop(self):
                    """åœæ­¢worker"""
                    self._is_running = False

            # v2.46.5: æ£€æŸ¥event loopçº¿ç¨‹æ˜¯å¦å­˜åœ¨
            if not hasattr(self, '_tts_event_loop_thread') or not self._tts_event_loop_thread:
                logger.error("TTSäº‹ä»¶å¾ªç¯çº¿ç¨‹æœªåˆå§‹åŒ–")
                return

            # åˆ›å»ºå¹¶å¯åŠ¨worker
            worker = TTSWorker(self.tts_manager, text, self._tts_event_loop_thread)
            worker.audio_ready.connect(self.audio_player.play_audio)
            worker.error_occurred.connect(lambda msg: logger.error(msg))

            # v2.46.3: ä¿å­˜workerå¼•ç”¨ï¼Œå¹¶åœ¨å®Œæˆåæ¸…ç†
            self.tts_workers.append(worker)

            def on_worker_finished():
                """workerå®Œæˆåçš„æ¸…ç†"""
                try:
                    if worker in self.tts_workers:
                        self.tts_workers.remove(worker)
                    worker.deleteLater()
                except Exception as e:
                    logger.error(f"æ¸…ç†TTS workerå¤±è´¥: {e}")

            worker.finished.connect(on_worker_finished)
            worker.start()

            logger.debug(f"TTSåˆæˆä»»åŠ¡å·²å¯åŠ¨: {text[:20]}...")

        except Exception as e:
            logger.error(f"TTSåˆæˆå¤±è´¥: {e}")

    def closeEvent(self, event):
        """çª—å£å…³é—­äº‹ä»¶ - æ¸…ç†èµ„æºï¼ˆv2.46.5: åœæ­¢TTS event loopçº¿ç¨‹ï¼‰"""
        try:
            logger.info("èŠå¤©çª—å£æ­£åœ¨å…³é—­ï¼Œæ¸…ç†èµ„æº...")

            # v2.46.5: åœæ­¢TTS event loopçº¿ç¨‹
            if hasattr(self, '_tts_event_loop_thread') and self._tts_event_loop_thread:
